<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/icon" />

    <LinearLayout
        android:id="@+id/account_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="25sp"
            android:layout_height="wrap_content"
            android:src="@drawable/user_account_icon" />

        <EditText
            android:id="@+id/account"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="bottom|left"
            android:hint="请输入账号"
            android:textColor="#fff"
            android:textColorHint="#f2f2f2"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/psw_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_ly"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="25sp"
            android:layout_height="wrap_content"
            android:src="@drawable/user_pwd_lock_icon" />

        <EditText

            android:password="true"
            android:singleLine="true"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="bottom|left"
            android:hint="请输入密码"
            android:textColor="#fff"
            android:textColorHint="#f2f2f2"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/psw_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/psw_ly"
        android:layout_marginTop="5dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:id="@+id/btn_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/psw_ly"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_login"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="登陆"
            android:textColor="#fff"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btn_regist"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>
<ProgressBar
    android:id="@+id/loading"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_marginBottom="60dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content" />
</RelativeLayout>
